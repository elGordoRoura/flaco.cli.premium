{
  "name": "flaco-desktop",
  "version": "0.0.10",
  "description": "Flaco AI - Local desktop coding teammate (Ollama only)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder && open distro/*.dmg",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "build:quiet": "electron-builder",
    "dev": "electron . --enable-logging",
    "package:icon": "node generate-icon.js",
    "test": "node tests/settings.test.js && node tests/chat-manager.test.js",
    "test:settings": "node tests/settings.test.js",
    "test:chat": "node tests/chat-manager.test.js"
  },
  "keywords": [
    "ai",
    "coding",
    "assistant",
    "flaco"
  ],
  "author": "Flaco AI",
  "license": "MIT",
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "directories": {
      "output": "distro"
    },
    "appId": "com.flaco.desktop",
    "productName": "Flaco AI",
    "artifactName": "Flaco-AI-${version}-${arch}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "RouraIO",
        "repo": "flaco.desktop"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "Flaco-AI-${version}-${arch}-setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Flaco AI"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/icon.png",
      "category": "Development",
      "artifactName": "Flaco-AI-${version}-${arch}.${ext}"
    }
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "electron": "^28.0.0",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "openai": "^6.10.0"
  }
}
